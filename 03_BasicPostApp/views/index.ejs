<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-800 text-white">
    <div class="container mx-auto p-6">
        <!-- Header -->
        <header class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold"><%= title %></h1>

            <!-- Conditional Link Based on User Login -->
            <% if (user) { %>
                <a href="/profile/<%= user.id %>" class="bg-yellow-500 text-black px-4 py-2 rounded-lg">Go to Profile</a>
            <% } else { %>
                <a href="/login" class="bg-yellow-500 text-black px-4 py-2 rounded-lg">Login</a>
            <% } %>
        </header>

        <!-- Hero Image -->
        <div class="bg-blue-500 h-64 flex items-center justify-center mb-6">
            <img src="https://images.pexels.com/photos/1025469/pexels-photo-1025469.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Hero Image" class="w-full h-full object-cover">
        </div>

        <!-- Posts -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% posts.forEach(post => { %>
                <div class="bg-white p-4 rounded-lg shadow-lg">
                    <img src="<%= post.image %>" alt="Post Image" class="w-full h-32 object-cover rounded-lg mb-4">
                    <h2 class="text-lg font-semibold mb-2"><%= post.username %></h2>
                    <p class="text-gray-600"><%= post.content %></p>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
